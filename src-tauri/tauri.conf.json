{
  "productName": "whoisdigger",
  "version": "0.2.0",
  "identifier": "com.whoisteam.whoisdigger",
  "build": {
    "beforeDevCommand": "npm run build && npm run build:css",
    "beforeBuildCommand": "npm run build && npm run build:css",
    "frontendDist": "../dist/app/html"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "whoisdigger",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "url": "mainPanel.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../dist/app/locales/*",
      "../dist/app/css/*",
      "../dist/app/vendor/*",
      "../dist/app/fonts/*",
      "../dist/app/compiled-templates/*",
      "../dist/app/data/*"
    ]
  },
  "plugins": {
      "fs": {
          "scope": ["**"]
      },
      "shell": {
          "open": true
      }
  }
}
