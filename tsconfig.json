{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["app/js/**/*.ts", "**/*.d.ts"]
}
