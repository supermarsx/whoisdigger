{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",

    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "rootDir": "app/js",
    "outDir": "dist/app/js",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["app/js/**/*.ts", "test/**/*.ts", "**/*.d.ts"]
}
