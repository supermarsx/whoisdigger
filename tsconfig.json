{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "rootDir": "app/ts",
    "outDir": "dist/app/ts",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false
  },
  "include": [
    "app/ts/**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "test"
  ]
}
