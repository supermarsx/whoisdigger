{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",

    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "rootDir": "app/ts",
    "outDir": "dist/app/ts",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["app/ts/**/*.ts", "**/*.d.ts"],
  "exclude": ["test"]
}
