{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "app/js",
    "outDir": "dist/app/js",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types"]
  },
  "include": ["app/js/**/*.ts", "**/*.d.ts"]
}
