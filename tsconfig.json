{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "rootDir": "app/ts",
    "outDir": "dist/app/ts",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types", "./types/fontawesome-free.d.ts"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "include": ["app/ts/**/*.ts", "**/*.d.ts"],
  "exclude": ["test"]
}
